generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id          String    @id @default(uuid())
  email       String    @unique
  password    String
  verified_at DateTime?

  Person  Person?
  Session Session[]

  @@map("accounts")
}

model Person {
  id         String @id @default(uuid())
  first_name String
  last_name  String
  cpf        String @unique

  account_id String  @unique
  account    Account @relation(fields: [account_id], references: [id])

  @@map("people")
}

model Session {
  id         String   @id @default(uuid())
  ip_address String
  user_agent String
  created_at DateTime @default(now())

  account_id String
  account    Account @relation(fields: [account_id], references: [id])
}
